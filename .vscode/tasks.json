    "tasks": [
        {
            "label": "build",
            "command": "gcc",
            "args": [
                "-Wall",
                "-g",
                "hello.c",
                "-o",
                "hello.out"
            ],
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run",
            "command": "bash",
            "args": [
                "-c",
                "./hello.out"
            ],
            "type": "shell"
        }
    ]
}