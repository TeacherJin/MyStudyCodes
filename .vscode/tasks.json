    "tasks": [
        {
            "taskName": "build",
            "command": "gcc",
            "args": [
                "-Wall",
                "-g",
                "hello.c",
                "-o",
                "hello.out"
            ],
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        // {
